<!DOCTYPE html>
<html>
<head><title>Articles</title><link rel="stylesheet" href="/styles.css"></head>
<body>
<h1>📰 Public Articles</h1>
<% posts.forEach(post => { %>
  <div class="post">
    <h2><%= post.title %></h2>
    <p><%= post.content %></p>
    <small><%= post.date %></small>
  </div>
<% }) %>
<a href="/login">🔐 Admin Login</a>
</body>
</html>